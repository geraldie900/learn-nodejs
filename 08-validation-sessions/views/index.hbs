<h1>{{ title }}</h1>
{{# if success}}
<section>
  <h2>Successful Validation</h2>
</section>
{{ else }}
{{# if errors}}
  <section>
    <ul>
      {{# each errors}}
        <li>{{ this.msg }}</li>
      {{/each}}
    </ul>
  </section>
{{/if}}
<p>Welcome to {{ title }}</p>
<form action="/submit" method="post">
  <div class="input">
    <label for="email">E-mail</label>
    <input type="text" id="email" name="id">
  </div>
  <div class="input">
    <label for="password">Password</label>
    <input type="password" id="password" name="password">
  </div>
  <div class="input">
    <label for="confimPassword">Confim Password</label>
    <input type="password" id="confimPassword" name="confimPassword">
  </div>
  <button type="submit">Sign Up</button>
</form>
{{/if}}